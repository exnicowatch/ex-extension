{
  "name": "ex-extension",
  "displayName": "ExNicoExtension",
  "version": "0.1.1",
  "description": "Browser Extension of ExNicoWatch",
  "author": "Negima1072",
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "clean": "rm -rf build/*",
    "package": "npm-run-all -s package:*",
    "package:chrome": "plasmo build --zip --target=chrome-mv3",
    "package:firefox": "plasmo build --zip --target=firefox-mv2",
    "package:edge": "plasmo build --zip --target=edge-mv3",
    "lint": "eslint --ext .ts,.tsx ./src",
    "fix": "yarn format && yarn lint:fix",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{js,jsx,ts,tsx}'"
  },
  "dependencies": {
    "plasmo": "0.65.3"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.1",
    "@types/chrome": "0.0.210",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.3",
    "typescript": "4.9.4"
  },
  "manifest": {
    "host_permissions": [
      "*://*.nicovideo.jp/*",
      "*://*.ex.n4a.dev/*",
      "*://*.dmc.nico/*",
      "*://*.nimg.jp/*"
    ],
    "permissions": [
      "cookies"
    ],
    "externally_connectable": {
      "matches": [
        "*://*.ex.n4a.dev/*",
        "*://localhost:3000/*"
      ]
    }
  }
}
